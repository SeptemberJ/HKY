.InfoBlock{
  width: 100%;
  height: 150px;
  border-bottom: 1px solid #c2c2c2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.Avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.nickName{
  padding: 0 10px;
}

.optionList{
  width: 710rpx;
  margin: 20px auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.optionItem{
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.optionTit{
  width: calc(100% - 100rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 5px;
}
