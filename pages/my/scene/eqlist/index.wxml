<view class="Scene_EQList">
  <view class='Scene_EQ_item' wx:for="{{EQList}}" wx:for-index="EQIdx" wx:for-item="Equipment" wx:key="EQIdx" bindlongtap='Delete' data-idx='{{EQIdx}}'>
    <image class='smallIcon' src="{{Equipment.icon}}"></image>
    <view class='Scene_EQ_item_info'>
      <text>{{Equipment.name}}</text>
      <text>{{Equipment.room}}</text>
    </view>
    <view class='Scene_EQ_item_status'>
      <picker mode="multiSelector" bindchange="bindMultiPickerChange" value="{{multiIndex+'_'+EQIdx}}" range="{{objectMultiArray}}" range-key='name' data-idx='{{EQIdx}}'>
        <text>{{objectMultiArray[0][multiIndexList[EQIdx][0]].name}}</text>
      </picker>
    </view>
    <view class='Scene_EQ_item_when'>
      <picker mode="multiSelector" bindchange="bindMultiPickerChange" value="{{multiIndex+'_'+EQIdx}}" range="{{objectMultiArray}}" range-key='name' data-idx='{{EQIdx}}'>
        <text>{{objectMultiArray[1][multiIndexList[EQIdx][1]].name}}</text>
      </picker>
    </view>
  </view>
</view>

<view class='Scene_EQ_FixedCircle' bindtap='ToAddEq'>
  <view class='Scene_EQ_innerCircle'>添加</view>
</view>
