.MessageItem{
  width: 710rpx;
  height: 30px;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.peopleInfo{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.peopleInfo .Info{
  width: calc(100% -100rpx - 100rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.peopleInfo .reply{
  width: 100rpx;
  height: 100%;
}
.Avatar{
  width: 100rpx;
  height: 100rpx;
  display: block;
}
.Info{
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}