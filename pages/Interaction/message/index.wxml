<view class="MessageList">
  <view class="MessageItem" wx:for="{{MessageList}}" wx:for-index="MessageIdx" wx:for-item="Message" wx:key="MessageIdx">
     <view class='peopleInfo'>
       <image class='Avatar' src='{{Message.interaction.f_headImg}}'></image> 
        <view class='Info'>
          <text>{{Message.interaction.f_name}}</text>
          <text>{{Message.interaction.p_time}}</text>
        </view>
        <!-- <view class='reply'><text>回复</text></view> -->
    </view> 
    <!--点赞或评论  -->
    <view class='detailBlock'>
      <text wx:if="{{Message.type == 1}}">{{Message.interaction.f_remark}}</text>
      <text wx:if="{{Message.type == 0}}">赞了你</text>
    </view>
    <!--原始动态  -->
     <view class='releaseContentBlock'>
      <image wx:if='{{Message.dynamic.f_picture.length>0}}' class='thumbnail' src='{{Message.dynamic.f_picture[0]}}'></image>
      <text style='padding:10rpx 20rpx;'>{{Message.dynamic.f_name}}: {{Message.dynamic.f_remark}}</text>
    </view>

    <view class='interactionList' wx:if='{{Message.replyList}}'>
      <!-- <text>{{Message.replyList.main.h_name_z}}:{{Message.replyList.main.h_remark}}</text>
      <text wx:for="{{Message.replyList.reply}}" wx:for-index="ReplyIdx" wx:for-item="Reply" wx:key="ReplyIdx">{{Reply.h_name_z}} : 回复 {{Reply.h_name_t}}: {{Reply.h_remark}}</text> -->
      <text wx:for="{{Message.replyList}}" wx:for-index="ReplyIdx" wx:for-item="Reply" wx:key="ReplyIdx">{{ReplyIdx == 0?Reply.h_name_z + ' : ' + Reply.h_remark :Reply.h_name_z + ' 回复 ' + Reply.h_name_t + ':' +  Reply.h_remark }}</text>
    </view>
    <!-- <view class='replyBlock'>
      <textarea class='TextBox' bindinput='ChangeReply' auto-height placeholder="{{'回复' + Info.fnamez}}" />
      <view class='releaseBt'>
        <view wx:if="{{!ReplyContent}}" class='normalBt'>回复</view>
        <view wx:if="{{ReplyContent}}" class='fbBt' bindtap='SumitInfo'>回复</view>
      </view>
    </view>  -->
  </view>

</view>