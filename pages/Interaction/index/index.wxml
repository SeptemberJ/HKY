<view class='releaseBar'>
  <text bindtap='MyRelease'>我的发布</text>
  <text bindtap='ToRelease'>我要发布</text>
  <!-- <text bindtap='MyMessage'>我的消息</text> -->
</view>

<view class='recordList'>
  <view class='recordItem' wx:for="{{DynamicList}}" wx:for-index="DynamicIdx" wx:for-item="Dynamic" wx:key="DynamicIdx">
    <view class='recordItem_left'>
      <image class='Avatar' src='{{Dynamic.comment_avatar}}'></image>
    </view>
    <view class='recordItem_right'>
      <text class='nickName'>{{Dynamic.comment_name}}</text>
      <text class='content'>{{Dynamic.comment_content}}</text>
      <!--图片  -->
      <view class='imgList'>
        <image class='imgList_item' src='{{Picture}}' wx:for="{{Dynamic.comment_picture}}" wx:for-index="PictureIdx" wx:for-item="Picture" wx:key="PictureIdx"></image>
      </view>
      <!--操作框  -->
      <view class='zanBlock'>
        <text class='time'>{{Dynamic.comment_time}}</text>
        <view class='zanOperation'>
          <view class='operationItem'>
            <image class='operationIcon' wx:if='{{!Dynamic.ifHasZan}}' src='../../../images/icon/zan.png' bindtap='Zan' data-idx='{{DynamicIdx}}' data-dynamic-id='{{Dynamic.id}}'></image>
            <image class='operationIcon' wx:if='{{Dynamic.ifHasZan}}' src='../../../images/icon/zan_active.png' bindtap='CancelZan' data-idx='{{DynamicIdx}}' data-dynamic-id='{{Dynamic.id}}'></image>
          </view>
          <view class='operationItem'>
            <image class='operationIcon' src='../../../images/icon/comment.png' bindtap='ShowReleaseModal' data-fabu-id='{{Dynamic.id}}' data-fabu-name='{{Dynamic.comment_name}}'></image>
            <!-- <text>评论</text> -->
          </view>
        </view>
      </view>
      <!--点赞评论显示  -->
      <view class='interactionBlock' wx:if="{{Dynamic.comment_zan.length>0 || Dynamic.comment_list.length>0}}">
        <view class='zanList'  wx:if="{{Dynamic.comment_zan.length>0}}">
          <image style="width:20px; height:20px;display:block; margin-right:5px;" src='../../../images/icon/zan_active.png'></image>
           <view class='peopleList'>
            <text wx:for="{{Dynamic.comment_zan}}" wx:for-index="ZanIdx" wx:for-item="Zan" wx:key="ZanIdx">{{Zan.name}},</text>
           </view> 
        </view>
        <view class='commentList' wx:if="{{Dynamic.comment_list.length>0}}">
          <view class='commentItem' wx:for="{{Dynamic.comment_list}}" wx:for-index="CommentIdx" wx:for-item="Comment" wx:key="CommentIdx">
            <view class='comment_content'>
              <text style='display:block;margin-bottom:5px;' bindtap='ShowReplyModal' data-target-name='{{Comment.main.people_name}}' data-name-f='{{Dynamic.comment_name}}' data-name-z='' data-fabu-id='{{Dynamic.id}}' data-idx='{{Comment.main.id}}'>{{Comment.main.people_name}}: {{Comment.main.people_content}}</text>
              <text style='display:block;margin-bottom:5px;' wx:for="{{Comment.reply}}" wx:for-index="ReplyIdx" wx:for-item="Reply" wx:key="ReplyIdx" data-target-name='{{Reply.name_F}}' data-name-f='{{Dynamic.comment_name}}' data-name-z='{{Reply.name_F}}' bindtap='ShowReplyModal' data-fabu-id='{{Dynamic.id}}' data-idx='{{Reply.id}}'>{{Reply.name_Z}} 回复 {{Reply.name_F}}: {{Reply.hf_content}}</text>
            </view>
          </view>
        </view>
      </view>
      <!--评论框  -->
        <!-- <view class='ReleaseBox'>
        <textarea class='TextBox'  bindinput='ChangeRelease' auto-height placeholder="评论一下。。。" show-confirm-bar='{{false}}' cursor-spacing='5' data-idx='{{DynamicIdx}}' value='{{ReleaseContentList[DynamicIdx]}}'/>
        <view class='releaseBt'>
          <view wx:if="{{ReleaseContentList[DynamicIdx]}}" class='fbBt' bindtap='SendRelease' data-idx='{{DynamicIdx}}' data-fabu-name='{{Dynamic.comment_name}}' data-fabu-id='{{Dynamic.id}}'>发布</view>
        </view>
      </view>   -->
      <!--  -->
    </view>
  </view>
</view>

<!--评论  -->
  <view wx:if='{{ifReadyRelease}}' style='width:calc(100% - 10px);padding:10px 5px; border-top:1px solid #ccc;background:#fff;position:fixed;bottom:10px;left:0;z-index:999999;display: flex;justify-content: space-between;'>
  <input show-confirm-bar='{{false}}' cursor-spacing='5' focus='{{true}}' bindblur='CloseReleaseModal' bindinput='ChangeReleaseContent' placeholder="评论一下。。。" style='border:1px solid #ccc;border-radius:2px;'></input>
  <view class='fbBt' bindtap='Submit'>发布</view>
</view>  
<!--回复  -->
  <view wx:if='{{ifReadyReply}}' style='width:calc(100% - 10px);padding:10px 5px; border-top:1px solid #ccc;background:#fff;position:fixed;bottom:10px;left:0;z-index:999999;display: flex;justify-content: space-between;'>
  <input show-confirm-bar='{{false}}' cursor-spacing='5' focus='{{true}}' bindblur='CloseReplyModal' bindinput='ChangeRelpyContent' placeholder="{{'回复' + CurReleaseInfo.name_F}}" style='border:1px solid #ccc;border-radius:2px;'></input>
  <view class='fbBt' bindtap='SubmitReply'>回复</view>
</view> 