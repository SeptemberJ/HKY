.releaseBar{
  width: 90%;
  padding: 0 5%;
  height: 30px;
  background: #fff;
  margin: 0 auto 20px auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #c2c2c2;
  position: fixed;
  top:0;
  left: 0;
  z-index: 999;
}
.recordList{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 40px;
}
.recordItem{
  width: 710rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.recordItem_left{
  width: 110rpx;
  height: 110rpx;
}
.Avatar{
  width: 100rpx;
  height: 100rpx;
  display: block;
}
.recordItem_right{
  width: calc(710rpx - 110rpx - 20rpx);
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.recordItem_right .nickName{
  margin: 10px 0;
  font-weight: bold;
  color: #3498db;
  font-size: 32rpx;
}
.recordItem_right .content{
  margin: 5px 0;
}

.recordItem_right .imgList{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
}
.recordItem_right .imgList_item{
  width: 250rpx;
  height: 250rpx;
  display: block;
}

.recordItem_right .zanBlock{
  width: 100%;
  height: 30px;
  margin: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recordItem_right .zanBlock .time{
  width: 180rpx;
  color: #666;
}
.recordItem_right .zanOperation{
  width: calc(100% - 180rpx);
  height: 30px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.recordItem_right .zanOperation .operationItem{
  display: flex;
  align-items: center;
  margin: 0 10px;
}
.recordItem_right .zanOperation .operationIcon{
  width: 20px;
  height: 20px;
}
/*interactionBlock  */
.recordItem_right .interactionBlock{
  width: calc(100% - 20px);
  padding: 5px 10px;
  background: #efefef;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.recordItem_right .zanList{
  width: 500rpx;
  height: 30px;
  display: flex;
  align-items: center;
}
.recordItem_right .peopleList{
  width: 400rpx;
  height: 30px;
  line-height: 30px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.recordItem_right .commentList{
  width: 100%;
}
.recordItem_right .commentList .commentItem{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 8px;
}
