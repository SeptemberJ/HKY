/**index.wxss**/
page{
  background: #f1f6f8;
}
.Wrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.dataInfo{
  width: 750rpx;
  height: 180px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background: #3498db;
}
.topBar{
  width: 710rpx;
  padding: 0 20rpx;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  font-size: 30rpx;
}
.operation{
  display: flex;
  justify-content: flex-end;
}
.operationIcon{
  width: 40rpx;
  height:  40rpx;
  margin: 0 0 0 10rpx;
  display: block;
}
.messageIocn{
  position: relative;
}
.TipDot{
  width: 8px;
  height: 8px;
  background: red;
  border-radius: 50%;
  position: relative;
  top: -2px;
  left: -4px;
}
.info{
  width: 710rpx;
  padding: 0 20rpx;
  height: 140px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.info_Left{
  width: 200rpx;
  height: 140px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.Left_item{
  width: 100%;
  height: 70px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  color: #fff;
}
.smallFont{
  font-size: 30rpx;
}
.temperatureIcon{
  width: 60rpx;
  height: 60rpx;
  display: block;
}

.info_Right{
  width: 510rpx;
  height: 140px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.Right_item{
  width: 170rpx;
  height: 70px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.carousel{
  width: 750rpx;
  margin: 20px 0;
  /* height: 100px;
  overflow: hidden; */
}
swiper {
  height: 150rpx !important;
}
.slide-image{
  width: 750rpx !important;
    height: 200rpx !important;  
}
.addBlock{
  width: calc(100% - 80rpx);
  padding: 20px 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.Btn{
  width: 100px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin: 20px auto;
}
