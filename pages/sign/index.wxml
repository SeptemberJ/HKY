<view class="SignBox">
  <view class='SignItem'>
    <view class='label'>用户名:</view>
    <input placeholder='请输入用户名' bindinput='ChangeUser_Name'></input>
  </view>
  <view class='SignItem'>
    <view class='label'>手机号:</view>
    <input placeholder='请输入手机号' bindinput='ChangeUser_Phone'></input>
  </view>
  <view class='SignItem'>
    <view class='label'>密码:</view>
    <input type='password' placeholder='请输入密码' bindinput='ChangeUser_Psd'></input>
  </view>
  <view class='SignItem'>
    <view class='label'>确认密码:</view>
    <input type='password' placeholder='请再次确认密码' bindinput='Confirm_Psd'></input>
  </view>
  <view class='SignBt' bindtap='Sign'>注册</view>
</view>

<view class='BottomBox'>
  <image src='../../images/picture/SignBg.png'></image>
</view>

<loading hidden="{{loadingHidden}}">
  加载中...
</loading>