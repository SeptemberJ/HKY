.Weight_ClockDial{
  width: 750rpx;
  height: 550rpx;
}
ec-canvas {
  width: 600rpx;
  height: 550rpx;
}
/*Weight_data  */
.Weight_data{
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.Weight_data text{
  padding: 10rpx 40rpx;
}
.Weight_data_BMI{
  border-right: 1px solid #000;
}
/*Weight_shape  */
.Weight_shape{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.Weight_shape image{
  width: 142rpx;
  height: 170.4rpx;
  display: block;
}
/*Weight_disease  */
.Weight_disease{
  width: 710rpx;
  margin: 20px auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: space-between;
}
.disease_item{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.progress{
  width: 300rpx;
  margin: 10rpx 50rpx 10rpx 0;
}
.disease_icon{
  width: 60rpx;
  height: 60rpx;
}
.disease_name{
  width: 150rpx;
  text-align: center;
}
.levelBlock{
  width: 130rpx;
  height: 25px;
  position: relative;
  background: green;
  color: #fff;
  text-align: center;
  line-height: 23px;
  z-index: 999;
}
.Sharp_left{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -24rpx;
  left: -24rpx;
  background: green;
  transform: rotate(45deg) translate(70%,55%);
  z-index: 9;
}
.ColorOrage{
  text-align: center;
  color: #f60;
}