page{
  background-image: linear-gradient(to right, #e4afcb 0%, #b8cbb8 0%, #b8cbb8 0%, #e2c58b 30%, #c2ce9c 64%, #7edbdc 100%);
}
.ControlWrap{
  width: 600rpx;
  margin: 20px auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.ControlItem{
  width: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
/*AirConditioner  */
.Temperature{
  width: 100%;
  height: 204rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}
.Temperature_number{
  width: 350rpx;
  height: calc(100% - 4px);
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: space-between;
  border: 2px solid #fff;
  border-radius: 10rpx;
}
.Temperature_number_item{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: space-between;
  color: #fff;
}
.Temperature_number_item text{
  flex: 1;
  height: 100rpx;
  font-size: 38rpx;
  line-height: 100rpx;
  text-align: center;
}
.Temperature_add_min{
  width: 130rpx;
  height: calc(100% - 4px);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border: 2px solid #fff;
  border-radius: 10rpx;
}
.Temperature_add_min image{
  width: 55rpx;
  height: 55rpx;
  display: block;
}
.Wind{
  width: 100%;
  height: 100rpx;
  margin: 20px auto;
  border: 2px solid #fff; 
  border-radius: 10rpx;
}