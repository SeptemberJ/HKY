<view class='diet'>
  <image class='topBlock' src='../../../images/picture/diet.png'></image>
  <view class='overlay'></view>
  <!--calendar  -->
  <view class='Calendar'>
  <picker mode="date" value="{{date}}" bindchange="DateChange">
    <view class="picker">
      {{chooseDate}}
    </view>
  </picker>
  </view>
  <!--dataCircle  -->
  <view class='dataCircle'>
    <view class="wrap">  
      <view class="circle {{percent>50?'clip-auto':''}}">  
          <view class="percent left" style="transform:rotate({{(18/5)*percent+'deg'}})"></view>  
          <view class="percent right {{percent>50?'':'wth0'}}"></view>  
      </view>  
        <view class="dataInfo">
          <view><text class='samllSize'>还可以摄入</text></view>
          <view><text class='bigSize'>1352</text></view>
          <view><text class='samllSize'>千卡</text></view>
       </view>    
    </view>
  </view>
  <!--columnBlock  -->
  <view class='columnBlock'>
    <view class='columnItem'>
      <text>碳水(克)</text>
      <text>0.0/169.0</text>
      <progress class="progress" percent="10"  stroke-width="3"  backgroundColor="#ccc" active="true" >
      </progress>
    </view>
    <view class='columnItem'>
      <text>脂肪(克)</text>
      <text>0.0/45.1</text>
      <progress class="progress" percent="0"  stroke-width="3"  backgroundColor="#ccc" active="true" >
      </progress>
    </view>
    <view class='columnItem'>
      <text>蛋白质(克)</text>
      <text>0.0/67.6</text>
      <progress class="progress" percent="0"  stroke-width="3"  backgroundColor="#ccc" active="true" >
      </progress>
    </view>
  </view>
  <!--tab  -->
  <!-- <view class='tabWrap'>
    <view class='tabBox'>
      <text class='active'>摄入</text>
      <text>消耗</text>
    </view>
  </view> -->
  
  <!--list  -->
  <view class='dietList'>
    <!--早餐  -->
    <view class='deitItem'>
      <view class='deit_Icon'>
        <image class='topBlock' src='../../../images/icon/breakfast.png'></image>
      </view>
      <view class='deit_Text'>
        <text class='deitItem_tit'>早餐</text>
        <text class='deitItem_text'>建议早餐摄入364-446千卡</text> 
      </view>
      <view class='deit_Add'>
        <image class='topBlock' src='../../../images/icon/blueAdd.png'></image>
      </view>
    </view>
    <!--午餐  -->
    <view class='deitItem'>
      <view class='deit_Icon'>
        <image class='topBlock' src='../../../images/icon/lunch.png'></image>
      </view>
      <view class='deit_Text'>
        <text class='deitItem_tit'>午餐</text>
        <text class='deitItem_text'>建议午餐摄入364-446千卡</text> 
      </view>
      <view class='deit_Add'>
        <image class='topBlock' src='../../../images/icon/blueAdd.png'></image>
      </view>
    </view>
    <!--晚餐  -->
    <view class='deitItem'>
      <view class='deit_Icon'>
        <image class='topBlock' src='../../../images/icon/dinner.png'></image>
      </view>
      <view class='deit_Text'>
        <text class='deitItem_tit'>晚餐</text>
        <text class='deitItem_text'>建议晚餐摄入364-446千卡</text> 
      </view>
      <view class='deit_Add'>
        <image class='topBlock' src='../../../images/icon/blueAdd.png'></image>
      </view>
    </view>
  </view>


</view>


 